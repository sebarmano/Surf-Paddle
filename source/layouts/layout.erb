<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Surf & Paddle" %></title>

    <%= stylesheet_link_tag "normalize", "style.css" %>
    <link ref='http://fonts.googleapis.com/css?family=PT+Sans' rel='stylesheet' type='text/css'>

  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
